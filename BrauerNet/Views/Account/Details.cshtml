@model ParticipantViewModel
@using BrauerNet.Models;
@using BrauerNet.ViewModels;

@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects on BrauerNet</h2>
<hr />
@if (Model.Count > 0)
{
    @foreach (var participant in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3>@Html.DisplayFor(modelItem => participant.FirstName)
                        @Html.DisplayFor(modelItem => participant.LastName)</h3>
                        <h3>@Html.DisplayFor(modelItem => participant.Email)</h3>
                        <h3>@Html.DisplayFor(modelItem => participant.PhoneNumber)</h3>
                </div>

            </div>
        </div>
    </div>
    }
}